
<h1>Listing experiments</h1>

<table class="table table-striped table-bordered table-condensed">  <thead>
    <tr>
      <th>Sample</th>
      <th>Name</th>
      <th>Platform</th>
      <th>Protocol</th>
      <th>Disease</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experiment_details.each do |experiment_detail| %>
      <tr>
        <td><%= experiment_detail.sample.name	 %></td>
        <td><%= experiment_detail.name %></td>
        <td><%= experiment_detail.platform.name %></td>
        <td><%= experiment_detail.protocol.name %></td>
        <td><%= experiment_detail.disease.name %></td>
        <td><%= link_to 'Show', experiment_detail %></td>
        <td><%= link_to 'Edit', edit_experiment_detail_path(experiment_detail) %></td>
        <td><%= link_to 'Destroy', experiment_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Experiment ', new_experiment_detail_path %>
