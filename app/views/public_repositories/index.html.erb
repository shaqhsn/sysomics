<h1>Listing public_repositories</h1>

<table class="table table-striped table-bordered table-condensed">  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Record</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @public_repositories.each do |public_repository| %>
      <tr>
        <td><%= public_repository.name %></td>
        <td><%= link_to public_repository.url, public_repository.url %></td>
        <td><%= public_repository.record_id %></td>
        <td><%= link_to 'Show', public_repository %></td>
        <td><%= link_to 'Edit', edit_public_repository_path(public_repository) %></td>
        <td><%= link_to 'Destroy', public_repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Public repository', new_public_repository_path %>
