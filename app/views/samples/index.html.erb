
<h1>Listing samples</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Project</th>
      <th>Name</th>
      <th>Title</th>
      <th>Number of Samples</th>
      <th>Organism</th>
      <th>Strain</th>
      <th>Tissue/CellType</th>
      <th>Molecule</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @samples.each do |sample| %>
      <tr>
      	<td><%= sample.project.title %></td>
        <td><%= sample.name %></td>
        <td><%= sample.title %></td>
        <td><%= sample.number_of_samples %></td>
        <td><%= sample.organism.name %></td>
        <td><%= sample.strain.name %></td>
        <td><%= sample.tissue.name %></td>
        <td><%= sample.molecule.name %></td>
        <td><%= link_to 'Show', sample %></td>
        <td><%= link_to 'Edit', edit_sample_path(sample)%></td>
        <td><%= link_to 'Destroy', sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sample', new_sample_path,:class => "blue btn " %>

