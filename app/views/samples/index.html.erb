<h1>Listing samples</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Cell type</th>
      <th>Tissue</th>
      <th>Organism</th>
      <th>Molecule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @samples.each do |sample| %>
      <tr>
        <td><%= sample.name %></td>
        <td><%= sample.title %></td>
        <td><%= sample.cell_type_id %></td>
        <td><%= sample.tissue_id %></td>
        <td><%= sample.organism_id %></td>
        <td><%= sample.molecule_id %></td>
        <td><%= link_to 'Show', sample %></td>
        <td><%= link_to 'Edit', edit_sample_path(sample) %></td>
        <td><%= link_to 'Destroy', sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

