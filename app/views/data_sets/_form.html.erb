<%= form_for(@data_set) do |f| %>
  <% if @data_set.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@data_set.errors.count, "error") %> prohibited this data_set from being saved:</h2>

      <ul>
      <% @data_set.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :data_set_type_id %><br>
    <%= f.select :data_set_type_id, options_for_select(DataSetType.all.map{|s|[s.name, s.id]}) %>
  </div>
  <div class="field">
    <%= f.label :project_id %><br>
    <%= f.select :project_id, options_for_select(Project.all.map{|s|[s.title, s.id]}) %>
  </div>
  <div class="field">
    <%= f.label :create_date %><br>
    <%= f.date_select :create_date %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment ,:class=>"input-xxlarge",:rows => 6 %>
  </div>
  <%= f.fields_for :assets do |p| %>
     <div class="field">
       <%= p.label :attachment %><br>
       <%= p.file_field :attachment,name: "assets[attachment][]" %>

     </div>
   <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
