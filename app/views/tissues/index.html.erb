<h1>Listing tissues</h1>

<table class="table table-striped table-bordered table-condensed">  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tissues.each do |tissue| %>
      <tr>
        <td><%= tissue.name %></td>
        <td><%= link_to 'Show', tissue %></td>
        <td><%= link_to 'Edit', edit_tissue_path(tissue)  %></td>
        <td><%= link_to 'Destroy', tissue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tissue', new_tissue_path ,:class => "blue btn " %>
