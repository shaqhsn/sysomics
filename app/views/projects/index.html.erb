<h1>Listing projects</h1>
<%= render :partial => "breadcrumbs" %>
<table CELLPADDING=10  CELLSPACING=7>
  <thead>
    <tr>
      <th>User</th>
      <th>Experiment</th>
      <th>Publication</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Attachment</th>
      <th>Size</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.user.username %></td>
        <td><%= project.experiment.name %></td>
        <td><%= project.publication_id %></td>
        <td><%= project.title %></td>
        <td><%= project.summary %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <% @assets.each do |p| %>
        <td><%= File.basename(p.attachment.url) %></td> 
        <td><%= number_to_human_size(p.attachment.size,:precision => 2) %></td> 
       <% end %>
       
        <td><%= link_to  'download',sftp_download_url(project) %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="asset_list"> 
    <!-- Listing Folders -->
    <% @folders.each do |folder| %> 
        <div class="asset_details folder"> 
        <div class="file_name"><%= link_to folder.name, browse_path(folder) %></div> 
            <div class="file_size"> - </div> 
        </div> 
    <% end %> 
  
    <!-- Listing Files -->
      <% @assets.each do |asset| %> 
          <div class="asset_details file"> 
              <div class="file_name"><%= File.basename(asset.attachment.url) %></div> 
              <div class="file_size"><%= number_to_human_size(asset.attachment.size, :precision => 2) %></div> 
          </div> 
      <% end %> 
</div>
<li><%= link_to 'New Project', new_project_path %><li>
 	<% if @current_folder %> 
    <li><%= link_to "New Folder", new_sub_folder_path(@current_folder) %></li> 
<% else %> 
    <li><%= link_to "New Folder", new_folder_path %></li> 
<% end %>
